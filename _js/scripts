// === GESTIÓN DE NAVEGACIÓN MÓVIL ===
const navToggle = document.querySelector(".nav-toggle");
const navMenu = document.querySelector(".nav-menu");

navToggle.addEventListener("click", () => {
  navMenu.classList.toggle("active");
  navToggle.setAttribute(
    "aria-expanded",
    navMenu.classList.contains("active") ? "true" : "false"
  );
});

// === LAZY LOADING CON INTERSECTION OBSERVER ===
const observerOptions = {
  threshold: 0.1,
  rootMargin: "0px 0px -50px 0px",
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach((entry) => {
    if (entry.isIntersecting) {
      entry.target.classList.add("loaded");
      observer.unobserve(entry.target);
    }
  });
}, observerOptions);

// Observar todos los elementos con lazy loading
document.querySelectorAll(".lazy-loading").forEach((el) => {
  observer.observe(el);
});

// === INDICADOR DE BREAKPOINT DINÁMICO ===
const debugInfo = document.querySelector(".debug-info");

function updateBreakpointIndicator() {
  const width = window.innerWidth;
  let breakpoint = "Mobile";

  if (width >= 1440) breakpoint = "XL Desktop";
  else if (width >= 1024) breakpoint = "Desktop";
  else if (width >= 768) breakpoint = "Tablet";
  else if (width >= 480) breakpoint = "Mobile L";

  debugInfo.setAttribute("data-breakpoint", breakpoint);
}

// Actualizar indicador al cargar y redimensionar
updateBreakpointIndicator();
window.addEventListener("resize", updateBreakpointIndicator);

// === SMOOTH SCROLLING PARA ENLACES INTERNOS ===
document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
  anchor.addEventListener("click", function (e) {
    e.preventDefault();
    const target = document.querySelector(this.getAttribute("href"));
    if (target) {
      target.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });
    }
  });
});

// === OPTIMIZACIÓN DE IMÁGENES - LOG DE DEBUG ===
const images = document.querySelectorAll("img[srcset]");
images.forEach((img) => {
  img.addEventListener("load", function () {
    console.log(`🖼️ Imagen cargada: ${this.currentSrc || this.src}`);
    console.log(
      `📐 Dimensiones naturales: ${this.naturalWidth}x${this.naturalHeight}px`
    );
    console.log(
      `📱 Viewport actual: ${window.innerWidth}x${window.innerHeight}px`
    );
  });
});

// === NEWSLETTER FORM HANDLER ===
const newsletterForm = document.querySelector(".newsletter-form");
newsletterForm.addEventListener("submit", function (e) {
  e.preventDefault();
  const email = this.querySelector("input").value;

  // Simulación de envío exitoso
  const button = this.querySelector("button");
  const originalText = button.textContent;

  button.textContent = "Suscrito ✓";
  button.style.background = "var(--color-success)";

  setTimeout(() => {
    button.textContent = originalText;
    button.style.background = "var(--color-accent)";
    this.reset();
  }, 2000);
});

// === PERFORMANCE MONITORING ===
window.addEventListener("load", () => {
  // Tiempo de carga completa
  const loadTime = performance.now();
  console.log(`⚡ Página cargada en: ${Math.round(loadTime)}ms`);

  // Métricas Web Vitals simuladas
  setTimeout(() => {
    console.log("📊 Métricas de Performance:");
    console.log("• LCP (Largest Contentful Paint): Optimizado");
    console.log("• FID (First Input Delay): < 100ms");
    console.log("• CLS (Cumulative Layout Shift): < 0.1");
  }, 1000);
});
